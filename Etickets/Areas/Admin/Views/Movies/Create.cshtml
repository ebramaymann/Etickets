@model CreateMovieFormVM
@{
    ViewData["Title"] = "Create Movie";
}

<h5 class="mb-3">Create Movie</h5>
<form asp-controller="Movies">
    <div class="row" >
    <div class="col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
             <span asp-validation-for="Name" class="text-danger" ></span>   
            </div>
    </div>
    </div>
        <div class="row">
        <div class="col-md-6">
            <div>
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option> </option>
                    
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>


    </div>
    <button type="submit" class="btn btn-light text-black mt-4  ">Save</button>
</form>